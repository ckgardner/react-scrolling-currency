{
  "include": ["src"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "es5",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "module": "ESNext",
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["jest"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
  }
}