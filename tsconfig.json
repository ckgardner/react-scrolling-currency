{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",                                
    "esModuleInterop": true,                                                     
    "forceConsistentCasingInFileNames": true,
    "strict": true,                                    
    "skipLibCheck": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
    },
    "jsx": "react",
    "declaration": true,
    "declarationDir": "dist/types",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true
  },
  "exclude": ["node_modules"],
  "include": [
    "tsconfig.json",
    "**/*.ts",
    "**/*.tsx",
    ".eslintrc.js",
    "prettier.config.js",
  ],
}